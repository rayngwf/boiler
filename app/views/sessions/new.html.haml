= title "Login", :h2
- form_tag session_path do
  %fieldset
    %legend Your Details
    %p== You can #{link_to "sign up a site account", signup_path} and login here.
    %ol
      %li
        = label_tag 'email', 'E-mail'
        = text_field_tag 'email', @email
      %li
        = label_tag 'password'
        = password_field_tag 'password', nil
      %li
        = label_tag 'remember_me', 'Remember me'
        = check_box_tag 'remember_me', '1', @remember_me
  %fieldset
    %legend Login with OpenID
    %ol
      %li
        = label_tag 'openid_url', 'OpenID URL'
        = text_field_tag 'openid_url'
  .buttons
    = submit_tag 'Login'
    = link_to 'Forgotten Password', forgot_password_path